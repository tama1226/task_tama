<h1>User一覧（管理者画面）</h1>

<%= link_to '新規ユーザー登録', new_admin_user_path %>

<%= paginate @users %>

<table>
  <tr>
    <th>ユーザー名</th>
    <th>email</th>
    <th>タスク数</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.count %></td>

    <td><%= link_to '詳細画面',admin_user_path(user.id) %></td>
      <td><%= link_to '編集画面',edit_admin_user_path(user.id) %></td>
      <td><%= link_to '削除',admin_user_path(user.id),method: :delete,data:{confirm: '削除してよろしいですか？？'} %></td>
  </tr>
<% end %>
</table>